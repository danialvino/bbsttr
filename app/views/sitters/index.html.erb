<div class="container">
    <h1>Achamos <%= pluralize(@sitters.count, 'baby-sitter disponivel', 'baby-sitters disponiveis') %> </h1>
  <% if @sitters.count == 0 %>
    <%= link_to "Realizar nova busca", root_path, class: "btn btn-xs btn-pink" %>
  <% else %>
    <% @sitters.each do |sitter| %>
      <%= render "shared/card", sitter: sitter %>
    <% end %>
  <% end %>
</div>



