<body class="centered page-loaded">
  <div class="section">
    <div class="subsection">
      <div class="logobby">
        <a class="logo" href="/" class="logo"></a>
        <img width="50" height="50" src="https://image.ibb.co/nbFcXS/baby_logo_sem_fundo.png" alt="logo icon">
      </div>
      <div id="main-region">
        <h3>Esqueceu sua senha?</h3>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div id="box">
          <h5>Email<%= f.input :email, label: false, required: true, autofocus: true %></h5>
          <div class="form-actions">
            <%= f.submit value: "Esqueci minha senha", class: "btn btn-pink" %>
          </div>
        </div>


        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
</div>
