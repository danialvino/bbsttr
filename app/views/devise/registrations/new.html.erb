<div class="container">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, required: true, label: "Nome", required: true %>
      <%= f.input :email, required: true, autofocus: true, required: true %>
      <%= f.input :password, required: true, label: "Senha", hint: ("#{@minimum_password_length} Caracteres mínimo." if @minimum_password_length) %>
      <%= f.input :password_confirmation, required: true %>
      <%= f.input :address, label: "Endereço", required: true %>
      <%= f.input :phone, label: "Celular", required: true %>
      <%= f.input :birthday, label: "Data de nascimento", required: true %>
      <%= f.input :gender, collection: ['Masculino', 'Feminino'], required: true  %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>
<%= render "devise/shared/links" %>
</div>

