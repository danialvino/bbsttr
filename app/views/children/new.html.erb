<h1>Quantos filhos a serem cuidados?</h1>

<%= simple_form_for (@child) do |f| %>
<div class="container">
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <div class="form-group">
      <%= f.input :gender, collection: ['Menino', 'Menina'] %>
      <%= f.input :age, collection: 0..15 %>

      </div>
    <div class="text-center"><%= f.submit class: "btn btn-blue" %></div>
    </div>
  </div>
</div>
<% end %>
